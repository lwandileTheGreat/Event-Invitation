@model PartyInvites.Models.GuestResponse

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RsvpForm</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>RSVP</h4></div>
        <div class="panel-body">
           
            <div style=" text-align: center">
                <form class="p-a-1" asp-action="RsvpForm" method="post">
                    <div asp-validation-summary="All"></div>
                    <div style="text-align: center">
                        <div class="form-group">

                            <label asp-for="Name">Your name:</label> <br />
                            <div class="formStyle">
                                <input class="form-control" asp-for="Name" placeholder="Name & Surname" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email">Your email:</label><br />
                            <div class="formStyle">
                                <input class="form-control" asp-for="Email" placeholder="Email" />
                            </div>
                        </div>

                        <div class="form-group">

                            <label asp-for="Phone">Your phone:</label> <br />
                            <div class="formStyle">
                                <input class="form-control" asp-for="Phone" placeholder="Phone Number" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label>Will you attend?</label> <br />
                            <div class="formStyle">
                                <select class="form-control" asp-for="WillAttend">
                                    <option value="">Choose an option</option>
                                    <option value="true">Yes, I'll be there</option>
                                    <option value="false">No, I can't come</option>
                                </select>
                            </div>
                        </div>

                        <div class="text-center">
                            <button class="btn btn-success" type="submit">
                                Submit RSVP
                            </button>
                        </div> </div>
                </form>
            
        </div>
    </div>

        </div>
        
        </body>
</html>

